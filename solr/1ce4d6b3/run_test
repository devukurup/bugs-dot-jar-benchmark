#!/bin/bash
script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
benchmark_name=$(echo $script_dir | rev | cut -d "/" -f 3 | rev)
project_name=$(echo $script_dir | rev | cut -d "/" -f 2 | rev)
bug_id=$(echo $script_dir | rev | cut -d "/" -f 1 | rev)
dir_name=/experiment/$benchmark_name/$project_name/$bug_id
TEST_CLASS=$1
TIMEOUT=${2:-300}
EXIT_CODE=1
cd $dir_name/src/src

if [ -z "$TEST_CLASS" ];
then
  echo "requires a test class"
  exit 255
fi

BUILD_SYSTEM="gradle"
SUB_PROJECT="solr/core"

# Source environment variables (for JAVA_HOME set by install_deps)
[ -f /etc/environment ] && source /etc/environment

# For Gradle builds, ensure JAVA_HOME is set to a compatible version
if [ "$BUILD_SYSTEM" = "gradle" ] && [ -z "$JAVA_HOME" ]; then
    # Find the highest Java version installed
    for java_dir in /usr/lib/jvm/java-*-openjdk-amd64; do
        if [ -d "$java_dir" ]; then
            export JAVA_HOME="$java_dir"
        fi
    done
fi

if [ "$BUILD_SYSTEM" = "gradle" ]; then
    # Gradle test
    GRADLE_CMD=""
    if [ -f "./gradlew" ]; then
        GRADLE_CMD="./gradlew"
    elif [ -f "gradlew" ]; then
        GRADLE_CMD="gradlew"
    else
        GRADLE_CMD="gradle"
    fi

    if [[ $SUB_PROJECT != "<SUB_PROJECT>" ]]; then
        # Convert Maven-style sub-project (e.g., "solr/core") to Gradle project path (e.g., ":solr:core")
        GRADLE_PROJECT=$(echo "$SUB_PROJECT" | sed 's:/$::' | sed 's:/:\::g')
        timeout $TIMEOUT $GRADLE_CMD :${GRADLE_PROJECT}:test --tests "$TEST_CLASS" \
          --no-daemon --console=plain > /dev/null 2>&1
    else
        timeout $TIMEOUT $GRADLE_CMD test --tests "$TEST_CLASS" \
          --no-daemon --console=plain > /dev/null 2>&1
    fi
else
    # Maven test
    if [[ $SUB_PROJECT != "<SUB_PROJECT>" ]]; then
        timeout $TIMEOUT mvn surefire:test -pl $SUB_PROJECT -Dtest=$TEST_CLASS \
          -DskipTests=false \
          -Dmaven.test.skip=false \
          -Dmaven.javadoc.skip=true > /dev/null 2>&1
    else
        timeout $TIMEOUT mvn surefire:test -Dtest=$TEST_CLASS \
          -DskipTests=false \
          -Dmaven.test.skip=false \
          -Dmaven.javadoc.skip=true > /dev/null 2>&1
    fi
fi

EXIT_CODE=$?

if [[ $EXIT_CODE -eq 0 ]]
then
  echo "PASS"
else
  echo "FAIL"
fi;

exit $EXIT_CODE

