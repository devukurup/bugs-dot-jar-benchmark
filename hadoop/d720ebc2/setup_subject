#!/bin/bash
script_dir="$( cd "$( dirname "${BASH_SOURCE[0]}" )" &> /dev/null && pwd )"
benchmark_name=$(echo $script_dir | rev | cut -d "/" -f 3 | rev)
project_name=$(echo $script_dir | rev | cut -d "/" -f 2 | rev)
bug_id=$(echo $script_dir | rev | cut -d "/" -f 1 | rev)
dir_name=/experiment/$benchmark_name/$project_name/$bug_id/src
current_dir=$PWD
mkdir -p $dir_name
cd $dir_name
mkdir dev-patch

BRANCH="bugs-dot-jar_YARN-108_d720ebc2_HOTFIX"
SUBJECT="hadoop"

# Download developer patch
echo "Downloading developer patch..."
PATCH_URL="https://raw.githubusercontent.com/carolhanna01/$SUBJECT/$BRANCH/.bugs-dot-jar/developer-patch.diff"
wget -q --timeout=30 -O dev-patch/fix.patch "$PATCH_URL"

if [ $? -eq 0 ] && [ -s dev-patch/fix.patch ]; then
    echo "Developer patch downloaded successfully"
else
    echo "Warning: Failed to download developer patch from $PATCH_URL"
    # Remove empty file if download failed
    rm -f dev-patch/fix.patch
fi

git clone --single-branch  --branch $BRANCH https://github.com/carolhanna01/$SUBJECT src

exit 0
